{% extends 'master.twig'%}
{% block title %}Coding Challenges | EMKC{% endblock %}
{% block content %}
    <div class="em_common_content em_challenges_list">
        <div class="row marginbottom20">
            <div class="col-12">
                <h4 class="f300">Challenges</h4>

                <p>
                    Welcome to Knowledge Center challenges, a place to test out your skills in one of fourteen languages
                    of your choosing on a number of different practical tests. Points are awarded based on difficulty.
                    You can complete the challenge up to fourteen times (one for each available language). New challenges are
                    being added all the time.
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-sm-4 easy">
                <h5>Easy (+10 pts)</h5>
                <div class="challenge_list">
                    {% for challenge in easy %}
                        <a href="/challenges/choose_language/{{ challenge.challenge_id }}" class="challenge">
                            <div class="title">{{ challenge.name }}</div>
                            <div class="description">
                                {{ challenge.description }}
                            </div>
                            {% if challenge.solution %}
                                <span class="badge badge-easy">Solved</span>
                            {% else %}
                                <span class="badge badge-light">Unsolved</span>
                            {% endif %}
                        </a>
                    {% endfor %}
                </div>
            </div>
            <div class="col-12 col-sm-4 medium">
                <h5>Medium (+30 pts)</h5>
                <div class="challenge_list">
                    {% for challenge in medium %}
                        <a href="/challenges/choose_language/{{ challenge.challenge_id }}" class="challenge">
                            <div class="title">{{ challenge.name }}</div>
                            <div class="description">
                                {{ challenge.description }}
                            </div>
                            {% if challenge.solution %}
                                <span class="badge badge-medium">Solved</span>
                            {% else %}
                                <span class="badge badge-light">Unsolved</span>
                            {% endif %}
                        </a>
                    {% endfor %}
                </div>
            </div>
            <div class="col-12 col-sm-4 hard">
                <h5>Hard (+50 pts)</h5>
                <div class="challenge_list">
                    {% for challenge in hard %}
                        <a href="/challenges/choose_language/{{ challenge.challenge_id }}" class="challenge">
                            <div class="title">{{ challenge.name }}</div>
                            <div class="description">
                                {{ challenge.description }}
                            </div>
                            {% if challenge.solution %}
                                <span class="badge badge-hard">Solved</span>
                            {% else %}
                                <span class="badge badge-light">Unsolved</span>
                            {% endif %}
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
