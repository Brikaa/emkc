{% extends 'master.twig'%}
{% block content %}
    <div class="em_wide_content">
        <div class="row">
            <div class="col-12">
                <h4 class="f300">Contests</h4>

                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Start</th>
                            <th>End</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for contest in contests %}
                            <tr>
                                <td>{{ contest.contest_id }}</td>
                                <td>{{ contest.name }}</td>
                                <td>{{ contest.start_date|date('m/d/Y') }}</td>
                                <td>{{ contest.end_date|date('m/d/Y') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
